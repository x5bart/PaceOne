<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".segment.Fragment2">


    <EditText
        android:id="@+id/etSegment"
        style="@style/EditTextFont"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:inputType="numberDecimal"
        android:text="1.00"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/etSegment"
        tools:layout_editor_absoluteX="155dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line segment (km)"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/etSegment"
        app:layout_constraintStart_toEndOf="@+id/etSegment"
        app:layout_constraintTop_toTopOf="@+id/etSegment" />
</androidx.constraintlayout.widget.ConstraintLayout>