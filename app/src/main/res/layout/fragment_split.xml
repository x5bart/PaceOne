<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_rounded"
    tools:context=".SplitFragment">
    <!--time-->
    <View
        android:id="@+id/divider12"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/tv_titleTime"
        style="@style/FontTitle"
        android:text="@string/time"
        app:layout_constraintBottom_toTopOf="@+id/time"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_distance"
        tools:visibility="invisible">

        <EditText
            android:id="@+id/et_time_h"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="3"
            android:theme="@style/EditTextFontSmall" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="40dp" />

        <EditText
            android:id="@+id/et_time_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="2"
            android:theme="@style/EditTextFontSmall"
            tools:layout_editor_absoluteX="45dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="85dp" />

        <EditText
            android:id="@+id/et_time_s"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="2"
            android:theme="@style/EditTextFontSmall"
            tools:layout_editor_absoluteX="91dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        style="@style/FontSmall"
        android:text="@string/hh_mm_ss"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <!--distance-->
    <TextView
        android:id="@+id/tv_titleDistance"
        style="@style/FontTitle"
        android:text="@string/distance"
        app:layout_constraintBottom_toTopOf="@+id/et_distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <EditText
        android:id="@+id/et_distance"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:theme="@style/EditTextFontSmall"
        app:layout_constraintBottom_toTopOf="@+id/divider5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/divider12" />

    <ImageView
        android:id="@+id/ivInfoKm"
        android:layout_width="22dp"
        android:layout_height="32dp"
        android:layout_marginStart="5dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/et_distance"
        app:layout_constraintStart_toEndOf="@+id/tv_titleDistance"
        app:layout_constraintTop_toTopOf="@+id/tv_titleDistance"
        android:background="@drawable/ic_round_arrow_drop_down" />

    <TextView
        android:id="@+id/textView555"
        style="@style/FontSmall"
        android:text="@string/km"
        app:layout_constraintEnd_toEndOf="@+id/et_distance"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/et_distance"
        app:layout_constraintTop_toBottomOf="@+id/et_distance" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="125dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/divider12"
        tools:layout_editor_absoluteX="1dp" />
    <!--segment-->
    <TextView
        android:id="@+id/tv_titleSplit"
        style="@style/FontTitle"
        android:text="@string/segment"
        app:layout_constraintBottom_toTopOf="@+id/et_split"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_titleStrategy"
        style="@style/FontTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splitFactor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/tv_titleSplit" />

    <EditText
        android:id="@+id/et_split"
        style="@style/EditTextFontBig"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:imeOptions="actionGo"
        android:inputType="numberDecimal"
        android:text="1.00"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/divider6"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider5" />

    <TextView
        android:id="@+id/tv_signSplit"
        style="@style/FontSmall"
        android:text="@string/km"
        app:layout_constraintEnd_toEndOf="@+id/et_split"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/et_split"
        app:layout_constraintTop_toBottomOf="@+id/et_split" />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="125dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/divider5"
        tools:layout_editor_absoluteX="1dp" />

    <LinearLayout
        android:id="@+id/header_splits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/divider6"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/textView10"
            style="@style/ItemList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="2"
            android:text="â„–" />

        <TextView
            android:id="@+id/textView11"
            style="@style/ItemList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="3"
            android:text="@string/km" />

        <TextView
            android:id="@+id/textView12"
            style="@style/ItemList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="5"
            android:text="@string/time" />

        <TextView
            android:id="@+id/textView13"
            style="@style/ItemList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="4"
            android:text="@string/pace" />

        <TextView
            android:id="@+id/textView14"
            style="@style/ItemList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="4"
            android:text="@string/avg" />
    </LinearLayout>

    <!--recycleView-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_splits"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/divider4"
        app:layout_constraintTop_toBottomOf="@+id/header_splits"
        tools:layout_editor_absoluteX="1dp" />

    <!--guideline-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="50dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/divider3"
        app:layout_constraintStart_toStartOf="parent" />

    <com.yandex.mobile.ads.AdView
        android:id="@+id/banner_view_split"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/divider3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/sb_split_negativ"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10"
        android:min="-10"
        android:thumbTint="@color/white"
        android:progress="0"
        android:progressTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/et_split"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <TextView
        android:id="@+id/tv_slit_strategy"
        style="@style/EditTextFontSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0%"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/sb_split_negativ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <ImageView
        android:id="@+id/ivNegativeSplit"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:clickable="true"
        android:src="@android:drawable/ic_dialog_info"
        app:layout_constraintBottom_toBottomOf="@+id/tv_titleStrategy"
        app:layout_constraintStart_toEndOf="@+id/tv_titleStrategy"
        app:layout_constraintTop_toTopOf="@+id/tv_titleStrategy" />


</androidx.constraintlayout.widget.ConstraintLayout>