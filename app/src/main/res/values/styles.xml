<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="EditTextFontBig" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">35dp</item>
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>
    <style name="EditTextFontSmall" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">24dp</item>
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="EditTextFr2" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">25dp</item>
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/btm_rounded_corner</item>
        <item name="android:height">0dp</item>
        <item name="android:width">200dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemList" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/audiowide</item>
    </style>

    <style name="TransaparentDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="FontTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize" >15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FontSmall" parent="Widget.AppCompat.TextView">
        <item name="android:textSize" >14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
