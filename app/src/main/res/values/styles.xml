<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mySwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>
        <item name="android:colorForeground">@android:color/white</item>
    </style>

    <style name="SwitchFont" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF292929</item>
        <item name="android:editTextColor">#FFFFFF</item>
    </style>

    <style name="EditTextFont" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">35sp</item>
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

</resources>
