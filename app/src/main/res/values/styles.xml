<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="EditTextFontBig" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">30dp</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="EditTextFontSmall" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">20dp</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="EditTextFr2" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">25dp</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/btn_rounded_corner</item>
        <item name="android:height">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemList" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/audiowide</item>
    </style>

    <style name="TransaparentDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="FontTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FontSmall" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@android:color/white</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@android:color/white</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:thumbTint">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <style name="DatePicker" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>                   <!--header background-->
        <item name="android:windowBackground">@color/colorPrimary</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/colorAccent</item> <!--selected day-->
    </style>


</resources>
